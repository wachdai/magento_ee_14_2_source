<?php if ($this->getSearchResults() && $this->getSearchResults()->getSize()): ?>
<div class="fieldset">
    <h2 class="legend"><?php echo $this->__('Search Results') ?></h2>
</div>
<?php echo $this->getChildHtml('pager') ?>
<table class="data-table" id="wishlist-search-results">
    <col />
    <col />
    <col width="1" />
    <thead>
        <tr>
            <th><?php echo $this->__('Name') ?></th>
            <th><?php echo $this->__('Wishlist Name') ?></th>
            <th><?php echo $this->__('Actions') ?></th>
        </tr>
    </thead>
    <tbody>
    <?php foreach($this->getSearchResults() as $item): ?>
        <tr>
            <td><span class="owner"><?php echo $this->escapeHtml($item->getCustomer()->getName()) ?></span></td>
            <td><span class="item-name"><?php echo $this->escapeHtml($item->getName()) ?></span></td>
            <td><a href="<?php echo $this->getWishlistLink($item) ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('View')) ?>"><?php echo $this->__('View') ?></a></td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>
<script type="text/javascript">decorateTable('wishlist-search-results')</script>
<?php echo $this->getChildHtml('pager') ?>
<?php else: ?>
    <p class="error-msg"><?php echo $this->__('Your search returned no results.') ?></p>
<?php endif; ?>
