$item = $this->getItem();
?>
<div class="split-button light">
    <strong class="split-button-title"<?php if ($this->getDefaultWishlist()->getId() != $this->getCurrentWishlist()->getId()): ?> onclick="Enterprise.Wishlist.moveItemTo(<?php echo $item->getId();?>, Enterprise.Wishlist.getRowQty($(this).up('tr')), <?php echo $this->getDefaultWishlist()->getId(); ?>);"<?php endif; ?>><span><?php echo $this->__('Move to Wishlist'); ?></span></strong>
