<config>
    <sections>
        <sales>
            <groups>
                <product_sku translate="label">
                    <label>Order by SKU Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <my_account_enable translate="label">
                            <label>Enable Order by SKU on My Account in Frontend</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <source_model>enterprise_checkout/cart_sku_source_settings</source_model>
                        </my_account_enable>
                        <allowed_groups translate="label">
                            <label>Customer Groups</label>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_type>multiselect</frontend_type>
                            <validate>required-entry</validate>
                            <source_model>adminhtml/system_config_source_customer_group_multiselect</source_model>
                            <depends>
                                <my_account_enable>2</my_account_enable>
                            </depends>
                        </allowed_groups>
                    </fields>
                </product_sku>
            </groups>
        </sales>
    </sections>
</config>
