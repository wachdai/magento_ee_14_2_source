<config>
    <modules>
        <Enterprise_PageCache>
            <version>1.11.0.0</version>
        </Enterprise_PageCache>
    </modules>
    <global>
        <models>
            <enterprise_pagecache>
                <class>Enterprise_PageCache_Model</class>
                <resourceModel>enterprise_pagecache_resource</resourceModel>
            </enterprise_pagecache>
            <enterprise_pagecache_resource>
                <class>Enterprise_PageCache_Model_Resource</class>
                <deprecatedNode>enterprise_pagecache_mysql4</deprecatedNode>
            </enterprise_pagecache_resource>
        </models>
        <blocks>
            <enterprise_pagecache>
                <class>Enterprise_PageCache_Block</class>
            </enterprise_pagecache>
        </blocks>
        <helpers>
            <enterprise_pagecache>
                <class>Enterprise_PageCache_Helper</class>
            </enterprise_pagecache>
        </helpers>
        <resources>
            <enterprise_pagecache_setup>
                <setup>
                    <module>Enterprise_PageCache</module>
                </setup>
            </enterprise_pagecache_setup>
        </resources>
        <cache>
            <types>
                <full_page translate="label,description" module="enterprise_pagecache">
                    <label>Page Cache</label>
                    <description>Full page caching.</description>
                    <tags>FPC</tags>
                </full_page>
            </types>
        </cache>
        <ignore_user_agents>
            <cache_crawler>MagentoCrawler</cache_crawler>
        </ignore_user_agents>
        <widget>
            <related_cache_types>
                <full_page/>
            </related_cache_types>
        </widget>
        <events>
            <core_clean_cache>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanExpiredCache</method>
                    </enterprise_pagecache>
                </observers>
            </core_clean_cache>
            <clean_cache_by_tags>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCacheByTags</method>
                    </enterprise_pagecache>
                </observers>
            </clean_cache_by_tags>
            <model_save_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>processEntityAction</method>
                    </enterprise_pagecache>
                </observers>
            </model_save_commit_after>
            <model_delete_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>processEntityAction</method>
                    </enterprise_pagecache>
                </observers>
            </model_delete_commit_after>
            <sales_order_place_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerNewOrder</method>
                    </enterprise_pagecache>
                </observers>
            </sales_order_place_after>
            <catalog_category_save_before>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerCategorySave</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_category_save_before>
            <review_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerReviewSave</method>
                    </enterprise_pagecache>
                </observers>
            </review_save_after>
            <review_delete_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerReviewDelete</method>
                    </enterprise_pagecache>
                </observers>
            </review_delete_after>

            <!-- FULL REINDEX -->
            <cataloginventory_stock_full_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </enterprise_pagecache>
                </observers>
            </cataloginventory_stock_full_reindex>
            <catalog_product_price_full_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_price_full_reindex>
            <catalog_product_flat_full_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_flat_full_reindex>
            <catalog_category_flat_full_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_category_flat_full_reindex>
            <catalog_category_product_full_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_category_product_full_reindex>

            <!-- PARTIAL PRODUCT REINDEX -->
            <cataloginventory_stock_partial_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>cleanProductsCacheAfterPartialReindex</method>
                    </enterprise_pagecache>
                </observers>
            </cataloginventory_stock_partial_reindex>
            <catalog_product_price_partial_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>cleanProductsCacheAfterPartialReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_price_partial_reindex>
            <catalog_product_flat_partial_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>cleanProductsCacheAfterPartialReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_flat_partial_reindex>
            <catalog_category_product_partial_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>cleanProductsCacheAfterPartialReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_category_product_partial_reindex>
            <catalog_url_product_partial_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>cleanProductsCacheAfterPartialReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_url_product_partial_reindex>

            <!-- PARTIAL CATEGORY REINDEX -->
            <catalog_category_flat_partial_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>cleanCategoriesCacheAfterPartialReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_category_flat_partial_reindex>
            <catalog_url_category_partial_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>cleanCategoriesCacheAfterPartialReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_url_category_partial_reindex>
            <catalog_url_category_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>cleanCacheByTags</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_url_category_reindex>
            <rewrite_url_partial_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>clearRequestCacheByTag</method>
                    </enterprise_pagecache>
                </observers>
            </rewrite_url_partial_reindex>
            <catalog_category_product_cat_partial_reindex>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer_index</class>
                        <method>cleanCategoriesCacheAfterPartialReindex</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_category_product_cat_partial_reindex>
            <catalog_category_product_fix_category_id>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>fixInvalidCategoryCookie</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_category_product_fix_category_id>
        </events>
    </global>
    <adminhtml>
        <events>
            <redirect_save_commit_after>
                <observers>
                    <invalidate_full_page_cache>
                        <class>enterprise_pagecache/observer</class>
                        <method>clearRequestCacheByTag</method>
                    </invalidate_full_page_cache>
                </observers>
            </redirect_save_commit_after>
            <redirect_delete_commit_after>
                <observers>
                    <invalidate_full_page_cache>
                        <class>enterprise_pagecache/observer</class>
                        <method>clearRequestCacheByTag</method>
                    </invalidate_full_page_cache>
                </observers>
            </redirect_delete_commit_after>
            <clean_media_cache_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCache</method>
                    </enterprise_pagecache>
                </observers>
            </clean_media_cache_after>
            <clean_catalog_images_cache_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCache</method>
                    </enterprise_pagecache>
                </observers>
            </clean_catalog_images_cache_after>
            <clean_configurable_swatches_cache_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCache</method>
                    </enterprise_pagecache>
                </observers>
            </clean_configurable_swatches_cache_after>
            <model_save_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>validateDataChanges</method>
                    </enterprise_pagecache>
                </observers>
            </model_save_commit_after>
            <model_delete_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>validateDataDelete</method>
                    </enterprise_pagecache>
                </observers>
            </model_delete_commit_after>
            <tag_save_before>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCachedProductTagsForTags</method>
                    </enterprise_pagecache>
                </observers>
            </tag_save_before>
            <tag_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCachedProductTagsForTags</method>
                    </enterprise_pagecache>
                </observers>
            </tag_save_after>
            <tag_delete_before>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCachedProductTagsForTags</method>
                    </enterprise_pagecache>
                </observers>
            </tag_delete_before>
            <controller_action_postdispatch_adminhtml_system_currency_saveRates>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>invalidateCache</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_adminhtml_system_currency_saveRates>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>invalidateCache</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <controller_action_postdispatch_adminhtml_system_currencysymbol_save>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>invalidateCache</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_adminhtml_system_currencysymbol_save>
            <core_config_backend_design_exception_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerDesignExceptionsChange</method>
                    </enterprise_pagecache>
                </observers>
            </core_config_backend_design_exception_save_after>
            <core_config_backend_web_secure_offloaderheader_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerSslOffloaderChange</method>
                    </enterprise_pagecache>
                </observers>
            </core_config_backend_web_secure_offloaderheader_save_after>
            <core_config_matcher_priority_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>invalidateCache</method>
                    </enterprise_pagecache>
                </observers>
            </core_config_matcher_priority_save_after>
            <adminhtml_system_config_backend_cookie_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>invalidateCache</method>
                    </enterprise_pagecache>
                </observers>
            </adminhtml_system_config_backend_cookie_save_after>
            <adminhtml_cache_refresh_type>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCache</method>
                    </enterprise_pagecache>
                </observers>
            </adminhtml_cache_refresh_type>
            <adminhtml_cache_flush_system>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCache</method>
                    </enterprise_pagecache>
                </observers>
            </adminhtml_cache_flush_system>
            <adminhtml_cache_flush_all>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>flushCache</method>
                    </enterprise_pagecache>
                </observers>
            </adminhtml_cache_flush_all>
            <wishlist_item_add_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerAdminWishlistChange</method>
                    </enterprise_pagecache>
                </observers>
            </wishlist_item_add_after>
        </events>
        <cache>
            <dependency>
                <change>
                    <widget>Mage_Widget_Model_Widget_Instance</widget>
                </change>
                <delete>
                    <widget>Mage_Widget_Model_Widget_Instance</widget>
                </delete>
            </dependency>
        </cache>
    </adminhtml>
    <frontend>
        <routers>
            <enterprise_pagecache>
                <use>standard</use>
                <args>
                    <module>Enterprise_PageCache</module>
                    <frontName>pagecache</frontName>
                </args>
            </enterprise_pagecache>
        </routers>
        <events>
            <controller_response_redirect>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>checkMessages</method>
                    </enterprise_pagecache>
                </observers>
            </controller_response_redirect>
            <controller_action_predispatch>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>processPreDispatch</method>
                    </enterprise_pagecache>
                    <enterprise_pagecache_form_key>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerCachedFormKey</method>
                    </enterprise_pagecache_form_key>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch_catalog_product_view>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>checkProductState</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_catalog_product_view>
            <controller_action_postdispatch_catalog_category_view>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>checkCategoryState</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_catalog_category_view>
            <controller_front_send_response_before>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cacheResponse</method>
                    </enterprise_pagecache>
                </observers>
            </controller_front_send_response_before>
            <core_block_abstract_to_html_before>
                <observers>
                    <enterprise_pagecache_register_parent_blocks>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerBlockContext</method>
                    </enterprise_pagecache_register_parent_blocks>
                </observers>
            </core_block_abstract_to_html_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <enterprise_pagecache_register_block_tags>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerBlockTags</method>
                    </enterprise_pagecache_register_block_tags>
                </observers>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>renderBlockPlaceholder</method>
                    </enterprise_pagecache>
                </observers>
            </core_block_abstract_to_html_after>
            <customer_login>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>customerLogin</method>
                    </enterprise_pagecache>
                    <enterprise_pagecache_compare_list_change>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerCompareListChange</method>
                    </enterprise_pagecache_compare_list_change>
                </observers>
            </customer_login>
            <customer_address_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>customerAddressUpdate</method>
                    </enterprise_pagecache>
                </observers>
            </customer_address_save_after>
            <controller_action_postdispatch_customer_account_logoutSuccess>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>customerLogout</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_customer_account_logoutSuccess>
            <sales_quote_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerQuoteChange</method>
                    </enterprise_pagecache>
                </observers>
            </sales_quote_save_after>
            <sales_quote_remove_item>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerQuoteChange</method>
                    </enterprise_pagecache>
                </observers>
            </sales_quote_remove_item>
            <catalog_product_compare_add_product>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerCompareListChange</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_compare_add_product>
            <catalog_product_compare_remove_product>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerCompareListChange</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_compare_remove_product>
            <catalog_product_compare_item_collection_clear>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerCompareListChange</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_compare_item_collection_clear>
            <core_session_abstract_add_message>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>processNewMessage</method>
                    </enterprise_pagecache>
                </observers>
            </core_session_abstract_add_message>
            <core_session_abstract_clear_messages>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>processMessageClearing</method>
                    </enterprise_pagecache>
                </observers>
            </core_session_abstract_clear_messages>
            <wishlist_add_product>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerWishlistChange</method>
                    </enterprise_pagecache>
                </observers>
            </wishlist_add_product>
            <wishlist_item_delete_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerWishlistChange</method>
                    </enterprise_pagecache>
                </observers>
            </wishlist_item_delete_commit_after>
            <poll_vote_add>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerPollChange</method>
                    </enterprise_pagecache>
                </observers>
            </poll_vote_add>
            <catalog_controller_product_init_before>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>updateProductInfo</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_controller_product_init_before>
            <enterprise_customersegment_ids_changed>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>changedCustomerSegmentIds</method>
                    </enterprise_pagecache>
                </observers>
            </enterprise_customersegment_ids_changed>
        </events>
        <cache>
            <requests>
                <_no_route>enterprise_pagecache/processor_noroute</_no_route>
                <cms>enterprise_pagecache/processor_default</cms>
                <catalog>
                    <category>
                        <view>enterprise_pagecache/processor_category</view>
                    </category>
                </catalog>
                <catalog>
                    <product>
                        <view>enterprise_pagecache/processor_product</view>
                    </product>
                </catalog>
            </requests>
        </cache>
    </frontend>
    <default>
        <system>
            <page_cache>
                <allowed_depth>1</allowed_depth>
                <multicurrency>1</multicurrency>
                <max_cache_size>1024</max_cache_size>
            </page_cache>
            <page_crawl>
                <enable>0</enable>
                <threads>1</threads>
                <multicurrency>1</multicurrency>
            </page_crawl>
        </system>

        <dev>
            <translate_inline>
                <invalid_caches>
                    <full_page/>
                </invalid_caches>
            </translate_inline>
        </dev>
    </default>
    <crontab>
        <jobs>
            <enterprise_page_cache_crawler>
                <schedule>
                    <cron_expr>0 3 * * *</cron_expr>
                </schedule>
                <run>
                    <model>enterprise_pagecache/crawler::crawl</model>
                </run>
            </enterprise_page_cache_crawler>
        </jobs>
    </crontab>
</config>
