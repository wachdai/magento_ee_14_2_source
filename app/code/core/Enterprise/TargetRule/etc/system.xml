<config>
    <sections>
        <catalog>
            <groups>
                <enterprise_targetrule translate="label" module="enterprise_targetrule">
                    <label>Rule-Based Product Relations</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>900</sort_order>
                    <fields>
                        <related_position_limit translate="label">
                            <label>Maximum Number of Products in Related Products List</label>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </related_position_limit>
                        <related_position_behavior translate="label">
                            <label>Show Related Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>enterprise_targetrule/source_position</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </related_position_behavior>
                        <related_rotation_mode translate="label">
                            <label>Rotation Mode for Products in Related Product List</label>
                            <frontend_type>select</frontend_type>
                            <source_model>enterprise_targetrule/source_rotation</source_model>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </related_rotation_mode>

                        <crosssell_position_limit translate="label">
                            <label>Maximum Number of Products in Cross-Sell Product List</label>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </crosssell_position_limit>
                        <crosssell_position_behavior translate="label">
                            <label>Show Cross-Sell Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>enterprise_targetrule/source_position</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </crosssell_position_behavior>
                        <crosssell_rotation_mode translate="label">
                            <label>Rotation Mode for Products in Cross-Sell Product List</label>
                            <frontend_type>select</frontend_type>
                            <source_model>enterprise_targetrule/source_rotation</source_model>
                            <sort_order>23</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </crosssell_rotation_mode>

                        <upsell_position_limit translate="label">
                            <label>Maximum Number of Products in Upsell Product List</label>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </upsell_position_limit>
                        <upsell_position_behavior translate="label">
                            <label>Show Upsell Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>enterprise_targetrule/source_position</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </upsell_position_behavior>
                        <upsell_rotation_mode translate="label">
                            <label>Rotation Mode for Products in Upsell Product List</label>
                            <frontend_type>select</frontend_type>
                            <source_model>enterprise_targetrule/source_rotation</source_model>
                            <sort_order>33</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </upsell_rotation_mode>
                    </fields>
                </enterprise_targetrule>
            </groups>
        </catalog>
    </sections>
</config>
