<config>
    <modules>
        <Enterprise_SalesArchive>
            <version>1.11.0.0</version>
        </Enterprise_SalesArchive>
    </modules>
    <global>
        <blocks>
            <enterprise_salesarchive>
                <class>Enterprise_SalesArchive_Block</class>
            </enterprise_salesarchive>
        </blocks>
        <models>
            <enterprise_salesarchive>
                <class>Enterprise_SalesArchive_Model</class>
                <resourceModel>enterprise_salesarchive_resource</resourceModel>
            </enterprise_salesarchive>
            <enterprise_salesarchive_resource>
                <class>Enterprise_SalesArchive_Model_Resource</class>
                <deprecatedNode>enterprise_salesarchive_mysql4</deprecatedNode>
                <entities>
                    <order_grid>
                        <table>enterprise_sales_order_grid_archive</table>
                    </order_grid>
                    <invoice_grid>
                        <table>enterprise_sales_invoice_grid_archive</table>
                    </invoice_grid>
                    <creditmemo_grid>
                        <table>enterprise_sales_creditmemo_grid_archive</table>
                    </creditmemo_grid>
                    <shipment_grid>
                        <table>enterprise_sales_shipment_grid_archive</table>
                    </shipment_grid>
                </entities>
            </enterprise_salesarchive_resource>
        </models>
        <helpers>
            <enterprise_salesarchive>
                <class>Enterprise_SalesArchive_Helper</class>
            </enterprise_salesarchive>
        </helpers>
        <resources>
            <enterprise_salesarchive_setup>
                <setup>
                    <module>Enterprise_SalesArchive</module>
                    <class>Enterprise_SalesArchive_Model_Resource_Setup</class>
                </setup>
            </enterprise_salesarchive_setup>
        </resources>
        <events>
            <sales_order_resource_update_grid_records>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>enterprise_salesarchive/observer</class>
                        <method>salesUpdateGridRecords</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_resource_update_grid_records>
            <sales_order_invoice_resource_update_grid_records>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>enterprise_salesarchive/observer</class>
                        <method>salesUpdateGridRecords</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_invoice_resource_update_grid_records>
            <sales_order_shipment_resource_update_grid_records>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>enterprise_salesarchive/observer</class>
                        <method>salesUpdateGridRecords</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_shipment_resource_update_grid_records>
            <sales_order_creditmemo_resource_update_grid_records>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>enterprise_salesarchive/observer</class>
                        <method>salesUpdateGridRecords</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_creditmemo_resource_update_grid_records>
            <controller_action_postdispatch_adminhtml_sales_order_shipment_massPrintShippingLabel>
                <observers>
                    <enterprise_salesarchive>
                        <class>enterprise_salesarchive/observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_shipment_massPrintShippingLabel>
            <controller_action_postdispatch_adminhtml_sales_order_pdfshipments>
                <observers>
                    <enterprise_salesarchive>
                        <class>enterprise_salesarchive/observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_pdfshipments>
            <controller_action_postdispatch_adminhtml_sales_order_pdfinvoices>
                <observers>
                    <enterprise_salesarchive>
                        <class>enterprise_salesarchive/observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_pdfinvoices>
            <controller_action_postdispatch_adminhtml_sales_order_pdfcreditmemos>
                <observers>
                    <enterprise_salesarchive>
                        <class>enterprise_salesarchive/observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_pdfcreditmemos>
            <controller_action_postdispatch_adminhtml_sales_order_pdfdocs>
                <observers>
                    <enterprise_salesarchive>
                        <class>enterprise_salesarchive/observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_pdfdocs>
            <controller_action_postdispatch_adminhtml_sales_order_massHold>
                <observers>
                    <enterprise_salesarchive>
                        <class>enterprise_salesarchive/observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_massHold>
            <controller_action_postdispatch_adminhtml_sales_order_massUnhold>
                <observers>
                    <enterprise_salesarchive>
                        <class>enterprise_salesarchive/observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_massUnhold>
            <controller_action_postdispatch_adminhtml_sales_order_massCancel>
                <observers>
                    <enterprise_salesarchive>
                        <class>enterprise_salesarchive/observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_massCancel>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_salesarchive before="Mage_Adminhtml">Enterprise_SalesArchive_Adminhtml</enterprise_salesarchive>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_salesarchive>
                    <file>enterprise/salesarchive.xml</file>
                </enterprise_salesarchive>
            </updates>
        </layout>
        <events>
            <sales_order_load_after>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>enterprise_salesarchive/observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_load_after>
            <sales_order_invoice_load_after>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>enterprise_salesarchive/observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_invoice_load_after>
            <sales_order_shipment_load_after>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>enterprise_salesarchive/observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_shipment_load_after>
            <sales_order_creditmemo_load_after>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>enterprise_salesarchive/observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_creditmemo_load_after>
            <sales_order_grid_collection_load_before>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>enterprise_salesarchive/observer</class>
                        <method>appendGridCollection</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_grid_collection_load_before>
        </events>
    </adminhtml>
    <default>
        <sales>
            <enterprise_salesarchive>
                <active>0</active>
                <age>30</age>
                <order_statuses>closed,complete</order_statuses>
            </enterprise_salesarchive>
        </sales>
    </default>
    <crontab>
        <jobs>
            <enterprise_salesarchive_archive_orders>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>enterprise_salesarchive/observer::archiveOrdersByCron</model>
                </run>
            </enterprise_salesarchive_archive_orders>
        </jobs>
    </crontab>
</config>
