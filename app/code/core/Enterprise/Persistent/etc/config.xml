<config>
    <modules>
        <Enterprise_Persistent>
            <version>1.0.0.0</version>
        </Enterprise_Persistent>
    </modules>

    <default>
        <persistent>
            <options>
                <wishlist>1</wishlist>
                <recently_ordered>1</recently_ordered>
                <compare_current>1</compare_current>
                <compare_history>1</compare_history>
                <recently_viewed>1</recently_viewed>
                <customer>1</customer>
            </options>
        </persistent>
    </default>

    <global>
        <models>
            <enterprise_persistent>
                <class>Enterprise_Persistent_Model</class>
                <resourceModel>enterprise_persistent_resource</resourceModel>
            </enterprise_persistent>
        </models>
        <helpers>
            <enterprise_persistent>
                <class>Enterprise_Persistent_Helper</class>
            </enterprise_persistent>
        </helpers>
        <events>
            <clear_expired_quotes_before>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>modifyExpiredQuotesCleanup</method>
                    </enterprise_persistent>
                </observers>
            </clear_expired_quotes_before>
        </events>
        <blocks>
            <enterprise_persistent>
                <class>Enterprise_Persistent_Block</class>
            </enterprise_persistent>
        </blocks>
    </global>

    <adminhtml>
        <events>
            <enterprise_persistent_options_shopping_cart_save_after>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>updateOptionCustomerSegmentation</method>
                    </enterprise_persistent>
                </observers>
            </enterprise_persistent_options_shopping_cart_save_after>
        </events>
    </adminhtml>

    <frontend>
        <events>
            <websiterestriction_frontend>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>skipWebsiteRestriction</method>
                    </enterprise_persistent>
                </observers>
            </websiterestriction_frontend>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>applyPersistentData</method>
                    </enterprise_persistent>
                    <enterprise_persistent_cart>
                        <class>enterprise_persistent/observer</class>
                        <method>removeCartLink</method>
                    </enterprise_persistent_cart>
                </observers>
            </controller_action_layout_generate_blocks_after>
            <controller_action_predispatch_catalog_product_compare_clear>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>applyCustomerId</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_catalog_product_compare_clear>
            <controller_action_predispatch_catalog_product_compare_remove>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>applyCustomerId</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_catalog_product_compare_remove>
            <controller_action_predispatch>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateCustomer</method>
                    </enterprise_persistent>
                    <persistent_customer>
                        <type>disabled</type>
                    </persistent_customer>
                </observers>
            </controller_action_predispatch>
            <controller_action_predispatch_wishlist_index_index>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_index>
            <controller_action_predispatch_wishlist_index_remove>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_remove>
            <controller_action_predispatch_wishlist_index_add>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_add>
            <controller_action_predispatch_wishlist_index_cart>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_cart>
            <controller_action_predispatch_wishlist_index_allcart>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_allcart>
            <controller_action_predispatch_wishlist_index_configure>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_configure>
            <controller_action_predispatch_wishlist_index_update>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_update>
            <controller_action_predispatch_wishlist_index_updateItemOptions>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_updateItemOptions>
            <controller_action_predispatch_wishlist_index_createwishlist>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_createwishlist>
            <controller_action_predispatch_wishlist_index_editwishlist>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_editwishlist>
            <controller_action_predispatch_wishlist_index_deletewishlist>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_deletewishlist>
            <controller_action_predispatch_wishlist_index_copyitem>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_copyitem>
            <controller_action_predispatch_wishlist_index_copyitems>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_copyitems>
            <controller_action_predispatch_wishlist_index_moveitems>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_moveitems>
            <controller_action_predispatch_wishlist_index_moveitem>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>emulateWishlist</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_wishlist_index_moveitem>
            <sales_quote_save_before>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>setQuotePersistentData</method>
                    </enterprise_persistent>
                </observers>
            </sales_quote_save_before>
            <controller_action_predispatch_checkout_onepage_saveMethod>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>preventSettingQuotePersistent</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_checkout_onepage_saveMethod>
            <controller_action_predispatch_checkout_onepage_saveOrder>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>preventSettingQuotePersistent</method>
                    </enterprise_persistent>
                </observers>
            </controller_action_predispatch_checkout_onepage_saveOrder>
            <render_block>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>applyBlockPersistentData</method>
                    </enterprise_persistent>
                </observers>
            </render_block>
            <persistent_session_expired>
                <observers>
                    <enterprise_persistent>
                        <class>enterprise_persistent/observer</class>
                        <method>expireSidebars</method>
                    </enterprise_persistent>
                </observers>
            </persistent_session_expired>
        </events>
    </frontend>
</config>
