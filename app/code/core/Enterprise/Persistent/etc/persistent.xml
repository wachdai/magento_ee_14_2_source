<config>
    <instances>
        <blocks>
            <reorder_sidebar>
                <name_in_layout>sale.reorder.sidebar</name_in_layout>
                <class>enterprise_persistent/observer</class>
                <method>initReorderSidebar</method>
                <block_type>Mage_Sales_Block_Reorder_Sidebar</block_type>
            </reorder_sidebar>
            <viewed_products>
                <name_in_layout>left.reports.product.viewed</name_in_layout>
                <class>enterprise_persistent/observer</class>
                <method>emulateViewedProductsBlock</method>
                <block_type>Mage_Reports_Block_Product_Viewed</block_type>
            </viewed_products>
            <compared_products>
                <name_in_layout>right.reports.product.compared</name_in_layout>
                <class>enterprise_persistent/observer</class>
                <method>emulateComparedProductsBlock</method>
                <block_type>Mage_Reports_Block_Product_Compared</block_type>
            </compared_products>
            <compare_products>
                <name_in_layout>catalog.compare.sidebar</name_in_layout>
                <class>enterprise_persistent/observer</class>
                <method>emulateCompareProductsBlock</method>
                <block_type>Mage_Catalog_Block_Product_Compare_Sidebar</block_type>
            </compare_products>
            <compare_products_list>
                <name_in_layout>catalog.compare.list</name_in_layout>
                <class>enterprise_persistent/observer</class>
                <method>emulateCompareProductsListBlock</method>
                <block_type>Mage_Catalog_Block_Product_Compare_List</block_type>
            </compare_products_list>
        </blocks>
        <models />
        <collections />
    </instances>
</config>
