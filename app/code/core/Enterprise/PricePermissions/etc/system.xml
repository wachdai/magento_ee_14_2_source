<config>
    <sections>
        <catalog>
            <groups>
                <price>
                    <fields>
                        <default_product_price translate="label comment">
                            <label>Default Product Price</label>
                            <comment><![CDATA[Defines the default product price]]></comment>
                            <backend_model>enterprise_pricepermissions/system_config_backend_catalog_product_price_default</backend_model>
                            <frontend_model>enterprise_pricepermissions/adminhtml_catalog_product_price_default</frontend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_product_price>
                    </fields>
                </price>
            </groups>
        </catalog>
    </sections>
</config>
