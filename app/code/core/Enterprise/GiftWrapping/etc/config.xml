<config>
    <modules>
        <Enterprise_GiftWrapping>
             <version>1.11.0.0.1</version>
        </Enterprise_GiftWrapping>
    </modules>

    <global>
        <models>
            <enterprise_giftwrapping>
                <class>Enterprise_GiftWrapping_Model</class>
                <resourceModel>enterprise_giftwrapping_resource</resourceModel>
            </enterprise_giftwrapping>
            <enterprise_giftwrapping_resource>
                <class>Enterprise_GiftWrapping_Model_Resource</class>
                <resourceModel>enterprise_giftwrapping_mysql4</resourceModel>
                <entities>
                    <wrapping><table>enterprise_giftwrapping</table></wrapping>
                    <attribute><table>enterprise_giftwrapping_store_attributes</table></attribute>
                    <website><table>enterprise_giftwrapping_website</table></website>
                </entities>
            </enterprise_giftwrapping_resource>
        </models>
        <helpers>
            <enterprise_giftwrapping>
                <class>Enterprise_GiftWrapping_Helper</class>
            </enterprise_giftwrapping>
        </helpers>
        <blocks>
             <enterprise_giftwrapping>
                <class>Enterprise_GiftWrapping_Block</class>
             </enterprise_giftwrapping>
        </blocks>
        <resources>
            <enterprise_giftwrapping_setup>
                <setup>
                    <module>Enterprise_GiftWrapping</module>
                    <class>Enterprise_GiftWrapping_Model_Resource_Mysql4_Setup</class>
                </setup>
            </enterprise_giftwrapping_setup>
        </resources>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <gift_wrapping_available />
                        <gift_wrapping_price />
                    </product_attributes>
                </item>
                <totals>
                    <giftwrapping>
                        <class>enterprise_giftwrapping/total_quote_giftwrapping</class>
                        <after>subtotal</after>
                        <renderer>enterprise_giftwrapping/checkout_totals</renderer>
                    </giftwrapping>
                    <tax_giftwrapping>
                        <class>enterprise_giftwrapping/total_quote_tax_giftwrapping</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </tax_giftwrapping>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <giftwrapping>
                        <class>enterprise_giftwrapping/total_invoice_giftwrapping</class>
                        <after>cost_total</after>
                    </giftwrapping>
                    <tax_giftwrapping>
                        <class>enterprise_giftwrapping/total_invoice_tax_giftwrapping</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </tax_giftwrapping>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <giftwrapping>
                        <class>enterprise_giftwrapping/total_creditmemo_giftwrapping</class>
                        <after>subtotal</after>
                    </giftwrapping>
                    <tax_giftwrapping>
                        <class>enterprise_giftwrapping/total_creditmemo_tax_giftwrapping</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </tax_giftwrapping>
                </totals>
            </order_creditmemo>
            <old_fields_map>
                <order>
                    <gw_add_printed_card>gw_add_card</gw_add_printed_card>
                    <gw_printed_card_base_price>gw_card_base_price</gw_printed_card_base_price>
                    <gw_printed_card_price>gw_card_price</gw_printed_card_price>
                    <gw_printed_card_base_tax_amount>gw_card_base_tax_amount</gw_printed_card_base_tax_amount>
                    <gw_printed_card_tax_amount>gw_card_tax_amount</gw_printed_card_tax_amount>
                    <gw_printed_card_base_price_invoiced>gw_card_base_price_invoiced</gw_printed_card_base_price_invoiced>
                    <gw_printed_card_price_invoiced>gw_card_price_invoiced</gw_printed_card_price_invoiced>
                    <gw_items_base_tax_amount_invoiced>gw_items_base_tax_invoiced</gw_items_base_tax_amount_invoiced>
                    <gw_items_tax_amount_invoiced>gw_items_tax_invoiced</gw_items_tax_amount_invoiced>
                    <gw_printed_card_base_tax_amount_invoiced>gw_card_base_tax_invoiced</gw_printed_card_base_tax_amount_invoiced>
                    <gw_printed_card_tax_amount_invoiced>gw_card_tax_invoiced</gw_printed_card_tax_amount_invoiced>
                    <gw_printed_card_base_price_refunded>gw_card_base_price_refunded</gw_printed_card_base_price_refunded>
                    <gw_printed_card_price_refunded>gw_card_price_refunded</gw_printed_card_price_refunded>
                    <gw_items_base_tax_amount_refunded>gw_items_base_tax_refunded</gw_items_base_tax_amount_refunded>
                    <gw_items_tax_amount_refunded>gw_items_tax_refunded</gw_items_tax_amount_refunded>
                    <gw_printed_card_base_tax_amount_refunded>gw_card_base_tax_refunded</gw_printed_card_base_tax_amount_refunded>
                    <gw_printed_card_tax_amount_refunded>gw_card_tax_refunded</gw_printed_card_tax_amount_refunded>
                </order>
                <quote>
                    <gw_add_printed_card>gw_add_card</gw_add_printed_card>
                    <gw_printed_card_base_price>gw_card_base_price</gw_printed_card_base_price>
                    <gw_printed_card_price>gw_card_price</gw_printed_card_price>
                    <gw_printed_card_base_tax_amount>gw_card_base_tax_amount</gw_printed_card_base_tax_amount>
                    <gw_printed_card_tax_amount>gw_card_tax_amount</gw_printed_card_tax_amount>
                </quote>
                <quote_address>
                    <gw_add_printed_card>gw_add_card</gw_add_printed_card>
                    <gw_printed_card_base_price>gw_card_base_price</gw_printed_card_base_price>
                    <gw_printed_card_price>gw_card_price</gw_printed_card_price>
                    <gw_printed_card_base_tax_amount>gw_card_base_tax_amount</gw_printed_card_base_tax_amount>
                    <gw_printed_card_tax_amount>gw_card_tax_amount</gw_printed_card_tax_amount>
                </quote_address>
                <order_creditmemo>
                    <gw_printed_card_base_price>gw_card_base_price</gw_printed_card_base_price>
                    <gw_printed_card_price>gw_card_price</gw_printed_card_price>
                    <gw_printed_card_base_tax_amount>gw_card_base_tax_amount</gw_printed_card_base_tax_amount>
                    <gw_printed_card_tax_amount>gw_card_tax_amount</gw_printed_card_tax_amount>
                </order_creditmemo>
                <order_invoice>
                    <gw_printed_card_base_price>gw_card_base_price</gw_printed_card_base_price>
                    <gw_printed_card_price>gw_card_price</gw_printed_card_price>
                    <gw_printed_card_base_tax_amount>gw_card_base_tax_amount</gw_printed_card_base_tax_amount>
                    <gw_printed_card_tax_amount>gw_card_tax_amount</gw_printed_card_tax_amount>
                </order_invoice>
            </old_fields_map>
        </sales>

        <pdf>
            <invoice>
                <giftwrapping>enterprise_giftwrapping/sales_pdf_items_invoice_giftwrapping</giftwrapping>
            </invoice>
            <shipment>
                <giftwrapping>enterprise_giftwrapping/sales_pdf_items_shipment_giftwrapping</giftwrapping>
            </shipment>
            <creditmemo>
                <giftwrapping>enterprise_giftwrapping/sales_pdf_items_creditmemo_giftwrapping</giftwrapping>
            </creditmemo>
            <totals>
                <giftwrapping_items translate="title">
                    <title>Gift Wrapping for Items</title>
                    <source_field>gw_items_price</source_field>
                    <model>enterprise_giftwrapping/sales_pdf_items</model>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>240</sort_order>
                </giftwrapping_items>
                <giftwrapping_order translate="title">
                    <title>Gift Wrapping for Order</title>
                    <source_field>gw_price</source_field>
                    <model>enterprise_giftwrapping/sales_pdf_order</model>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>250</sort_order>
                </giftwrapping_order>
            </totals>
        </pdf>

        <events>
            <sales_quote_collect_totals_before>
                <observers>
                    <enterprise_giftwrapping>
                        <class>enterprise_giftwrapping/observer</class>
                        <method>quoteCollectTotalsBefore</method>
                    </enterprise_giftwrapping>
                </observers>
            </sales_quote_collect_totals_before>
            <paypal_prepare_line_items>
                <observers>
                    <enterprise_giftwrapping>
                        <class>enterprise_giftwrapping/observer</class>
                        <method>addPaypalGiftWrappingItem</method>
                    </enterprise_giftwrapping>
                </observers>
            </paypal_prepare_line_items>

            <pdf_item_draw_after>
                <observers>
                    <enterprise_giftwrapping>
                        <class>enterprise_giftwrapping/observer</class>
                        <method>addGiftWrappingInfoForItemToPdf</method>
                    </enterprise_giftwrapping>
                </observers>
            </pdf_item_draw_after>
        </events>
        <fieldsets>
            <sales_convert_quote_item>
                <gw_id><to_order_item>*</to_order_item></gw_id>
                <gw_base_price><to_order_item>*</to_order_item></gw_base_price>
                <gw_price><to_order_item>*</to_order_item></gw_price>
                <gw_base_tax_amount><to_order_item>*</to_order_item></gw_base_tax_amount>
                <gw_tax_amount><to_order_item>*</to_order_item></gw_tax_amount>
            </sales_convert_quote_item>
            <sales_convert_quote>
                <gw_id><to_order>*</to_order></gw_id>
                <gw_allow_gift_receipt><to_order>*</to_order></gw_allow_gift_receipt>
                <gw_add_card><to_order>*</to_order></gw_add_card>
                <gw_base_price><to_order>*</to_order></gw_base_price>
                <gw_price><to_order>*</to_order></gw_price>
                <gw_items_base_price><to_order>*</to_order></gw_items_base_price>
                <gw_items_price><to_order>*</to_order></gw_items_price>
                <gw_card_base_price><to_order>*</to_order></gw_card_base_price>
                <gw_card_price><to_order>*</to_order></gw_card_price>
                <gw_base_tax_amount><to_order>*</to_order></gw_base_tax_amount>
                <gw_tax_amount><to_order>*</to_order></gw_tax_amount>
                <gw_items_base_tax_amount><to_order>*</to_order></gw_items_base_tax_amount>
                <gw_items_tax_amount><to_order>*</to_order></gw_items_tax_amount>
                <gw_card_base_tax_amount><to_order>*</to_order></gw_card_base_tax_amount>
                <gw_card_tax_amount><to_order>*</to_order></gw_card_tax_amount>
            </sales_convert_quote>
            <sales_convert_quote_address>
                <gw_id><to_order>*</to_order></gw_id>
                <gw_allow_gift_receipt><to_order>*</to_order></gw_allow_gift_receipt>
                <gw_add_card><to_order>*</to_order></gw_add_card>
                <gw_base_price><to_order>*</to_order></gw_base_price>
                <gw_price><to_order>*</to_order></gw_price>
                <gw_items_base_price><to_order>*</to_order></gw_items_base_price>
                <gw_items_price><to_order>*</to_order></gw_items_price>
                <gw_card_base_price><to_order>*</to_order></gw_card_base_price>
                <gw_card_price><to_order>*</to_order></gw_card_price>
                <gw_base_tax_amount><to_order>*</to_order></gw_base_tax_amount>
                <gw_tax_amount><to_order>*</to_order></gw_tax_amount>
                <gw_items_base_tax_amount><to_order>*</to_order></gw_items_base_tax_amount>
                <gw_items_tax_amount><to_order>*</to_order></gw_items_tax_amount>
                <gw_card_base_tax_amount><to_order>*</to_order></gw_card_base_tax_amount>
                <gw_card_tax_amount><to_order>*</to_order></gw_card_tax_amount>
            </sales_convert_quote_address>
        </fieldsets>
    </global>

    <frontend>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <enterprise_giftwrapping>
                        <class>enterprise_giftwrapping/observer</class>
                        <method>checkoutProcessWrappingInfo</method>
                    </enterprise_giftwrapping>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <checkout_controller_multishipping_shipping_post>
                <observers>
                    <enterprise_giftwrapping>
                        <class>enterprise_giftwrapping/observer</class>
                        <method>checkoutProcessWrappingInfo</method>
                    </enterprise_giftwrapping>
                </observers>
            </checkout_controller_multishipping_shipping_post>
            <gift_options_prepare_items>
                <observers>
                    <enterprise_giftwrapping>
                        <class>enterprise_giftwrapping/observer</class>
                        <method>prepareGiftOptpionsItems</method>
                    </enterprise_giftwrapping>
                </observers>
            </gift_options_prepare_items>
        </events>
        <translate>
            <modules>
                <Enterprise_GiftWrapping>
                    <files>
                        <default>Enterprise_GiftWrapping.csv</default>
                    </files>
                </Enterprise_GiftWrapping>
            </modules>
        </translate>
        <layout>
            <updates>
                <enterprise_giftwrapping>
                    <file>giftwrapping.xml</file>
                </enterprise_giftwrapping>
            </updates>
        </layout>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_giftwrapping before="Mage_Adminhtml">Enterprise_GiftWrapping_Adminhtml</enterprise_giftwrapping>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <events>
            <adminhtml_sales_order_create_process_data>
                <observers>
                    <enterprise_giftwrapping>
                        <class>enterprise_giftwrapping/observer</class>
                        <method>processOrderCreationData</method>
                    </enterprise_giftwrapping>
                </observers>
            </adminhtml_sales_order_create_process_data>
            <sales_convert_order_to_quote>
                <observers>
                    <enterprise_giftwrapping>
                        <type>model</type>
                        <class>enterprise_giftwrapping/observer</class>
                        <method>salesEventOrderToQuote</method>
                    </enterprise_giftwrapping>
                 </observers>
            </sales_convert_order_to_quote>
            <sales_convert_order_item_to_quote_item>
                <observers>
                    <enterprise_giftwrapping>
                        <type>model</type>
                        <class>enterprise_giftwrapping/observer</class>
                        <method>salesEventOrderItemToQuoteItem</method>
                    </enterprise_giftwrapping>
                 </observers>
            </sales_convert_order_item_to_quote_item>
        </events>
        <layout>
            <updates>
                <enterprise_giftwrapping>
                    <file>enterprise/giftwrapping.xml</file>
                </enterprise_giftwrapping>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_GiftWrapping>
                    <files>
                        <default>Enterprise_GiftWrapping.csv</default>
                    </files>
                </Enterprise_GiftWrapping>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <system>
            <media_storage_configuration>
                <allowed_resources>
                    <giftwrapping_folder>wrapping</giftwrapping_folder>
                </allowed_resources>
            </media_storage_configuration>
        </system>
        <sales>
            <gift_options>
                <wrapping_allow_order>1</wrapping_allow_order>
                <wrapping_allow_items>1</wrapping_allow_items>
                <allow_gift_receipt>1</allow_gift_receipt>
                <allow_printed_card>1</allow_printed_card>
            </gift_options>
        </sales>
        <tax>
            <cart_display>
                <gift_wrapping>1</gift_wrapping>
                <printed_card>1</printed_card>
            </cart_display>
            <sales_display>
                <gift_wrapping>1</gift_wrapping>
                <printed_card>1</printed_card>
            </sales_display>
         </tax>
    </default>
</config>
